{
  "listName": "Quick Links",
  "description": "Quick access links for Bred Bank Cambodia intranet",
  "template": "GenericList",
  "columns": [
    { "name": "LinkTitle", "type": "Text", "required": true },
    { "name": "URL", "type": "URL", "required": true },
    { "name": "IconName", "type": "Text", "required": false, "description": "Fluent UI icon name (e.g., People, Calendar, Money)" },
    { "name": "Category", "type": "Choice", "required": false, "choices": ["Home Page", "HR Page", "Finance Page", "IT Page"] },
    { "name": "Order", "type": "Number", "required": true },
    { "name": "OpenInNewTab", "type": "Boolean", "required": false, "default": false },
    { "name": "IsActive", "type": "Boolean", "required": false, "default": true }
  ],
  "views": [
    { "name": "Home Page Links", "query": "<Where><Eq><FieldRef Name='Category'/><Value Type='Choice'>Home Page</Value></Eq></Where>", "orderBy": "Order" },
    { "name": "All Links", "orderBy": "Order" }
  ]
}
